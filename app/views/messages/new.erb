<form id="sms_message" action='/messages' method='post'>

  <div class="form-group">
  <label for="sender">From: </label>
  <input type="text" name="message[from]">
  </div>

  <div class="form-group">
  <label for="recipient">To: </label>
  <input type="text" name="message[to]">
  </div>

  <div class="form-group">
  <label for="time">Hours: </label>
  <input type="text" name="time[hours]">
  </div>

  <div class="form-group">
  <label for="time">Minutes: </label>
  <input type="text" name="time[minutes]">
  </div>

  <div class="form-group">
  <label for="time">Seconds: </label>
  <input type="text" name="time[seconds]">
  </div>

  <div class="form-group">
  <label for="message">Message: </label>
  <textarea rows="10" cols="30" name="message[body]"></textarea>
  </div>

  <input class="btn btn-default" type="submit" value="Send Message">
</form>