<h1><span class="highlight">Register</span> for this awesome site</h1>

<ul id="error-messages">
  <% if @user && @user.errors %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
</ul>

<form method="post", action="/users">

  <div class="form-group">
  <label for="username-input">Username: </label>
  <input id="username-input" name="user[username]" type="text" value="<%= @user.try(:username) %>">
  </div>

  <div class="form-group">
  <label for="password-input">Password: </label>
  <input id="password-input" name="user[password]" type="password" value="<%= @user.try(:password) %>">
  </div>

  <div class="form-group">
  <label for="username-input">SID: </label>
  <input id="SID-input" name="user[sid]" type="text" value="<%= @user.try(:sid) %>">
  </div>

  <div class="form-group">
  <label for="token-input">Authorization Token: </label>
  <input id="token-input" name="user[auth_token]" type="text" value="<%= @user.try(:auth_token) %>">
  </div>

  <div class="form-group">
  <label for="twilio-number-input">Twilio Phone Number: </label>
  <input id="twilio-number-input" name="user[twilio_number]" type="text" value="<%= @user.try(:twilio_number) %>">
  </div>

  <div class="form-group">
  <label for="raw-number-input">Your Actual Phone Number: </label>
  <input id="raw-number-input" name="user[raw_number]" type="text" value="<%= @user.try(:raw_number) %>">
  </div>
  <input class="btn btn-default" type="submit" value="Register">

</form>